<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
</div>

<div class="wrapper">
  <div class="container" style="width: 970px">
    <div class="row" class="flat-presentation">
      <div class="col-xs-12 col-sm-10>
        <div class="flat-details">
          <div class="flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
            <p><%=owner%></p>
            <h1><%= flat.name %></h1>
            <div class="room">
              <div class="flat-name col-xs-12 col-sm-10 col-sm-offset-1">
                <h3><%= flat.description %></h3>
                <p><%= flat.city_name %></p>
                <p class="ratings">
                  <%flat.rating.to_i.times do %>
                    <i class="fas fa-star checked" style="color: #ffb400"></i>
                  <%end %>
                  <%count = 5 - flat.rating.to_i %>
                  <% if count.positive? %>
                    <% count.times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                  <% end %>
                </p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="flat-description">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h2>About this flat</h2>
          <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.</p>
          <hr>
          <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              <p>The space</p>
            </div>
            <div class="col-xs-12 col-sm-5">
              <ul class="list-unstyled">
                <li>Accommodates: <strong>2</strong></li>
                <li>Bathrooms: <strong>1</strong></li>
                <li>Bed type: <strong>Real bed</strong></li>
                <li>Bedrooms: <strong>1</strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-5">
              <ul class="list-unstyled">
                <li>Beds: <strong>1</strong></li>
                <li>Property type: <strong>Appartement</strong></li>
                <li>Bed type: <strong>Apartment</strong></li>
                <li>Room type: <strong>Entire home/apt</strong></li>
              </ul>
            </div>
          </div>
          <hr>
          <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              <p>Amenities</p>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fas fa-utensils"></i></i><strong> Kitchen</strong></li>
                <%if flat.wifi %>
                <li><i class="fas fa-wifi"></i><strong> Wifi</strong></li>
                <%end %>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fas fa-tv"></i></i><strong> TV</strong></li>
                <li><i class="fas fa-glass-martini"></i></i><strong> Welcome drink</strong></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="wrapper-footer text-center">
  <div class="container" style="width: 650px">
    <div class="col-xs-12 col-xm-6">
      <form action="#">
        <h4 class="text-center" style="padding-bottom: 10px">Book this flat</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkin" id="checkin">
            </div>
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
            <div class="form-group col-xs-12 col-xm-6">
              <select name id="guests" class="form-control" style="margin-top: 15px">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
                <option value="4+">4+ guests</option>
              </select>
            </div>
            <div class="col-xs-12 col-xm-6">
              <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
            </div>
          </div>
      </form>
    </div>
  </div>
</div>

